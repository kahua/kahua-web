# Makefile for kahua-web
# $Id: Makefile.in,v 1.20 2005/06/30 07:52:11 nobsun Exp $

package	          = kahua-web
kahua		  = kahua
SHELL             = @SHELL@
prefix            = @prefix@
exec_prefix       = @exec_prefix@
bindir            = @bindir@/$(kahua)
sbindir           = @sbindir@/$(kahua)
libexecdir	  = @libexecdir@/$(kahua)
datadir		  = @datadir@/$(kahua)
sysconfdir        = @sysconfdir@/$(kahua)
sharedstatedir    = @sharedstatedir@/$(kahua)
localstatedir     = @localstatedir@/$(kahua)
libdir            = @libdir@/$(kahua)
includedir        = @includedir@/$(kahua)
oldincludedir     = @oldincludedir@/$(kahua)
infodir           = @infodir@/$(kahua)
mandir            = @mandir@/$(kahua)
srcdir            = @srcdir@
VPATH             = $(srcdir)
top_builddir      = @top_builddir@
top_srcdir        = @top_srcdir@

DESTDIR  =

GOSH = @GOSH@
INSTALL = @INSTALL@
KAHUA_INSTALL = @KAHUA_INSTALL@
KAHUA_WORKING = $(localstatedir)
KAHUA_LIB     = $(libdir)

KAHUA_WEB_VERSION = $(shell cat $(top_srcdir)/VERSION)

# specify -c ../kahua.conf etc. to give an alternative conf file
KAHUACONFIG = -c $(sysconfdir)/kahua.conf

SCRIPTS	= adduser lsuser

SCRIPTFILES = kahua-web/kahua-web.kahua \
              kahua-web/macro.kahua \
	      kahua-web/login.kahua \
	      kahua-web/search.kahua \
	      kahua-web/comment.kahua \
	      kahua-web/rss.kahua \
	      kahua-web/version.kahua

LOCALSCRIPTFILES = kahua-web/local.kahua

STATICFILES = kahua-web/kahua-web.css

SOURCEDIR   = kahua-web
PLUGINFILE  = wiliki.scm

CONFIG_GENERATED = Makefile test/test.scm \
		   config.log config.status autom4*.cache

.PHONY: all check clean distclean install maintainer-clean

all:	test/test.scm $(SCRIPTS) kahua-web/version.kahua

$(SCRIPTS): 
	$(top_srcdir)/mkscript $(GOSH) $(libdir) $(libdir) $@

test/test.scm:	test/test.scm.in
	sed -e "s@##GOSH##@$(GOSH)@" -e "s@##KAHUA_WORKING##@$(KAHUA_WORKING)@" -e "s@##KAHUA_LIB##@$(KAHUA_LIB)@" $< > $@

kahua-web/version.kahua: kahua-web/version.kahua.in
	sed -e "s@###KAHUA_WEB_VERSION###@$(KAHUA_WEB_VERSION)@" $< > $@

check:  test/test.scm
	rm -f test/test.log
	cd test; $(GOSH) -I$(KAHUA_LIB) ./test.scm > test.log

clean:
	rm -rf core *~ kahua-web/*~ test/*~ test/_* test/test.log $(SCRIPTS)

install: 
	$(KAHUA_INSTALL) $(KAHUACONFIG) -t script $(SCRIPTFILES)
	$(KAHUA_INSTALL) $(KAHUACONFIG) -t script --no-overwrite $(LOCALSCRIPTFILES)
	$(KAHUA_INSTALL) $(KAHUACONFIG) -t static --no-overwrite $(STATICFILES)
	$(KAHUA_INSTALL) $(KAHUACONFIG) -t plugin -r $(PLUGINFILE) \
                                        $(SOURCEDIR)/$(PLUGINFILE)
	$(GOSH) -I$(libdir) ./init.scm $(KAHUACONFIG)
	for f in $(SCRIPTS); do \
	  $(INSTALL) -m 555 $$f $(bindir)/kahua-web-$$f; \
	  $(INSTALL) -m 555 $$f.scm $(libdir)/$$f.scm; \
	done

uninstall :
	$(KAHUA_INSTALL) -U $(KAHUACONFIG) -t script $(SCRIPTFILES)
	$(KAHUA_INSTALL) -U $(KAHUACONFIG) -t static $(STATICFILES)
	$(KAHUA_INSTALL) -U $(KAHUACONFIG) -t plugin -r $(PLUGINFILE) \
                                        $(SOURCEDIR)/$(PLUGINFILE)

distclean: clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean: clean
	rm -rf $(CONFIG_GENERATED) configure VERSION DIST_EXCLUDE_X



